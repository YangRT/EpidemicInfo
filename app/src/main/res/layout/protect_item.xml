<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:layout_margin="10dp"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/protect_image"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent=".35"
        android:layout_width="90dp"
        android:layout_height="120dp"/>
    <TextView
        android:textColor="#000000"
        android:layout_marginTop="8dp"
        android:text="新型冠状病毒肺炎流行，外卖还能吃吗？买不到消毒液家里消毒用什么替代？"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/protect_image"
        app:layout_constraintWidth_percent=".66"
        android:id="@+id/protect_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/protect_time"
        app:layout_constraintBottom_toBottomOf="@id/protect_image"
        app:layout_constraintEnd_toEndOf="@id/protect_title"
        android:textColor="@color/colorAccent"
        android:text="03:11 23:22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>